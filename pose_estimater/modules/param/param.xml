marker:
  file_path: "marker_csv/factory/bmc_3F_pair.csv"

individual_pose_calib_file_path: "~/shelf_calibration.txt"

server:
  port: 40200

LPF_strength: 0.7

camera:
  frame_capture:
    is_fisheye: false
    device_file_path: "/dev/video0"
    resolution_w: 1280                    # 解像度
    resolution_h: 720                     # 解像度
    calib_file_path: "camera_calib/baffalo_BSW300M.xml"
  detector:
    # for aruco marker detection
    min_marker_perimeter_rate: 0.03
    max_marker_perimeter_rate: 4.0
    # pair marker configurations
    use_pair_marker: true
    pair_offset_rate: 1.1875
    pair_detect_position_error_rate_thresh: {x: 0.12, y: 0.12}
    pair_detect_rotate_error_thresh: 0.1
  pose: {x: 0.0, y: 0.0, theta: 1.57}

height: 0.9

imu:
  use: false
  device_file_path: "/dev/ttyACM0"
